menu "Platform"

config ARM
	bool

config PLAT_HAS_GPIO
	bool

config PLAT_HAS_GPIO_INTERRUPTS
	bool

config PLAT_HAS_SERIAL
	bool

config PLAT_HAS_SPI
	bool

config PLAT_HAS_EMBEDDED_ETH
	bool

config PLAT_HAS_PWM
	bool

config BUFFERED_SERIAL
	bool
	depends on PLAT_HAS_SERIAL

config PLAT_HAS_BLK
	bool

config 16_BIT
	bool

config TI
        bool

config STELLARIS
	bool
	select ARM
	select TI
	select PLAT_HAS_GCC
	select PLAT_HAS_TI_CCS5
	select PLAT_HAS_GPIO
	select PLAT_HAS_SERIAL
	select BUFFERED_SERIAL
	select PLAT_HAS_SPI
	select PLAT_HAS_MALLOC

config TIVA_C
	bool
	select ARM
	select TI
	select PLAT_HAS_GCC
	select PLAT_HAS_GPIO
	select PLAT_HAS_SERIAL
	select BUFFERED_SERIAL
	select PLAT_HAS_SPI
	select PLAT_HAS_MALLOC

config STELLARIS_ETH
	bool
	depends on STELLARIS && PLAT_HAS_EMBEDDED_ETH && NET
	select ETHERIF
	default y

config TIVA_C_EMAC
	bool
	depends on TIVA_C && PLAT_HAS_EMBEDDED_ETH && NET
	select ETHERIF
	default y

config FRDM
	bool
	select ARM
	select PLAT_HAS_GCC
	select PLAT_HAS_MALLOC
	select PLAT_HAS_SERIAL
	select BUFFERED_SERIAL

config STM32
	bool
	select ARM
	select PLAT_HAS_GCC
	select PLAT_HAS_MALLOC
	select PLAT_HAS_GPIO
	select PLAT_HAS_SERIAL
	select PLAT_HAS_SPI
	select BUFFERED_SERIAL
	select GPIO

config STM32_USART_NO_IN_AF
	bool

config STM32_GPIO_API_LEGACY
	bool

config STM32_HAS_FSMC_LCD
	bool

config STM32F1XX
	bool
	select STM32
	select STM32_GPIO_API_LEGACY
	select STM32_USART_NO_IN_AF
	select STM32_HAS_FSMC_LCD

config STM32F103XX
	bool
	select STM32F1XX

config STM32F103RBT
	bool
	select STM32F103XX

config STM32F103VET6
	bool
	select STM32F103XX

config STM32F103RCT6
	bool
	select STM32F103XX

config STM32F3XX
	bool
	select STM32

config STM32F303XX
	bool
	select STM32F3XX

config STM32F4XX
	bool
	select STM32

config STM32F407XX
	bool
	select STM32F4XX
	select STM32_HAS_FSMC_LCD

config STM32F429XX
	bool
	select STM32F4XX

config STM32_FSMC_LCD
	bool "Support for FSMC connected ILI93XX LCD controller"
	depends on STM32_HAS_FSMC_LCD
	default y

config MSP430
	bool
	select PLAT_HAS_TI_CCS5
	select PLAT_HAS_MALLOC
	select 16_BIT

config UNIX
	bool
	select PLAT_HAS_MALLOC
	select PLAT_HAS_GCC

config MSP430F5529
	bool
	select MSP430
	select PLAT_HAS_GPIO
	select PLAT_HAS_SERIAL
	select PLAT_HAS_SPI
	select PLAT_HAS_GPIO_INTERRUPTS
	select BUFFERED_SERIAL

config LM3S6918
	bool
	select STELLARIS
	select PLAT_HAS_EMBEDDED_ETH

config LM3S6965
	bool
	select STELLARIS
	select PLAT_HAS_PWM
	select PLAT_HAS_EMBEDDED_ETH

config LM4F120XL
	bool
	select STELLARIS
	select PLAT_HAS_GPIO_INTERRUPTS

config TM4C123G
	bool
	select TIVA_C

config TM4C1294
	bool
	select TIVA_C
	select PLAT_HAS_PWM
	select PLAT_HAS_EMBEDDED_ETH

if UNIX
source "platform/unix/Kconfig"
endif

source "platform/Kconfig.toolchain"

endmenu
