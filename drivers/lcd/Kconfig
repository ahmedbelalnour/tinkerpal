menu "LCD"

config TEXT_LCD
	bool "Support for Hitachi HD44780 like text LCD screens over GPIO"
	depends on GPIO && JS
	default y

config ILI93XX
	bool

config ILI9328
	bool "Support for the ILI9328 LCD controller"
	depends on GPIO
	default y if RDK_IDM
	select ILI93XX
	help
		Access is via a 16 bit GPIO interface for data

endmenu
